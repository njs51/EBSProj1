<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="10dp"
        android:text="학습하기" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:padding="5dp"
            android:scaleType="fitXY"
            app:srcCompat="@color/colorPrimaryDark"

            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:paddingTop="5dp"
                android:text="id"
                android:textColor="#000000"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/item_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Title"
                android:textColor="#000000"
                android:textSize="15dp" />

        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="_________________________"
        android:paddingVertical="20dp"
        android:paddingHorizontal="30dp"
        android:id="@+id/txt_eng"
        android:textColor="#000000"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="_________________________"
        android:paddingBottom="10dp"
        android:paddingHorizontal="30dp"
        android:id="@+id/txt_kor"
        android:textColor="#000000"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="_________________________"
        android:paddingVertical="20dp"
        android:paddingHorizontal="30dp"
        android:id="@+id/txt_eng2"
        android:textColor="#000000"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="_________________________"
        android:paddingBottom="20dp"
        android:paddingHorizontal="30dp"
        android:id="@+id/txt_kor2"
        android:textColor="#000000"
        />

    <TextView
        android:id="@+id/txt_result"
        android:layout_width="354dp"
        android:layout_height="96dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:textStyle="bold"
        android:background="@drawable/border"
        android:paddingVertical="30dp"
        android:textColor="#f1417c"
        android:text=" 듣고있어요... "
        android:singleLine="false"
        />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:srcCompat="@drawable/mic" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_engScr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="#000000"
            android:layout_marginHorizontal="5dp"
            android:text="영어 script 보기" />

        <Button
            android:id="@+id/btn_korScr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="#000000"
            android:layout_marginHorizontal="5dp"
            android:text="한글 script 보기" />
    </LinearLayout>

</LinearLayout>